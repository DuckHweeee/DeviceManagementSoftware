<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Device Management System</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DeviceManagementSoftware.styles.css" asp-append-version="true" />
    
    <style>
        body {
            font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid px-4">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-microchip me-2 fs-4 text-primary"></i>
                    <span>Device Management System</span>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-tachometer-alt me-1"></i>
                                Dashboard
                            </a>
                        </li>
                        
                        <!-- Category Management Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="categoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-tags me-1"></i>
                                Categories
                            </a>
                            <ul class="dropdown-menu shadow-custom">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-area="" asp-controller="DeviceCategory" asp-action="Index">
                                        <i class="fas fa-list me-2"></i>
                                        View Categories
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-area="" asp-controller="DeviceCategory" asp-action="Create">
                                        <i class="fas fa-plus-circle me-2"></i>
                                        Add Category
                                    </a>
                                </li>
                            </ul>
                        </li>
                        
                        <!-- Device Management Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="deviceDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-laptop me-1"></i>
                                Devices
                            </a>
                            <ul class="dropdown-menu shadow-custom">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-area="" asp-controller="Device" asp-action="Index">
                                        <i class="fas fa-list-ul me-2"></i>
                                        View Devices
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-area="" asp-controller="Device" asp-action="Create">
                                        <i class="fas fa-plus-circle me-2"></i>
                                        Add Device
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="#">
                                        <i class="fas fa-search me-2"></i>
                                        Search Devices
                                    </a>
                                </li>
                            </ul>
                        </li>
                        
                        <!-- User Management Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-users me-1"></i>
                                Users
                            </a>
                            <ul class="dropdown-menu shadow-custom">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-area="" asp-controller="User" asp-action="Index">
                                        <i class="fas fa-user-friends me-2"></i>
                                        View Users
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-area="" asp-controller="User" asp-action="Create">
                                        <i class="fas fa-user-plus me-2"></i>
                                        Add User
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-area="" asp-controller="User" asp-action="AssignDevice">
                                        <i class="fas fa-exchange-alt me-2"></i>
                                        Assign Device
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    
                    <!-- Right side navigation -->
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="settingsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-cog me-1"></i>
                                Settings
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-custom">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Privacy">
                                        <i class="fas fa-shield-alt me-2"></i>
                                        Privacy
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="#">
                                        <i class="fas fa-palette me-2"></i>
                                        Theme Settings
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center text-muted" href="#">
                                        <i class="fas fa-sign-out-alt me-2"></i>
                                        Sign Out
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        <!-- Breadcrumb Navigation -->
        <div class="container-fluid px-4 py-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-white p-3 rounded-custom shadow-sm">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    @if (ViewData["Title"] is string title && title != "Dashboard")
                    {
                        <li class="breadcrumb-item active" aria-current="page">@title</li>
                    }
                </ol>
            </nav>
        </div>
        
        <!-- Main Content Area -->
        <div class="container-fluid px-4">
            <!-- Alert Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    <div>@TempData["SuccessMessage"]</div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <div>@TempData["ErrorMessage"]</div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show d-flex align-items-center" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <div>@TempData["InfoMessage"]</div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["WarningMessage"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show d-flex align-items-center" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <div>@TempData["WarningMessage"]</div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto">
        <div class="container-fluid px-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">
                        &copy; @DateTime.Now.Year - <strong>Device Management System</strong>
                    </p>
                    <small class="text-muted">Powered by .NET Core 8.0</small>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="d-flex justify-content-md-end justify-content-center gap-3 mt-3 mt-md-0">
                        <a href="@Url.Action("Privacy", "Home")" class="d-flex align-items-center">
                            <i class="fas fa-shield-alt me-1"></i>
                            Privacy
                        </a>
                        <a href="#" class="d-flex align-items-center">
                            <i class="fas fa-question-circle me-1"></i>
                            Help
                        </a>
                        <a href="#" class="d-flex align-items-center">
                            <i class="fas fa-envelope me-1"></i>
                            Contact
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Custom JavaScript for enhanced UX -->
    <script>
        // Add loading states for buttons
        $(document).ready(function() {
            // Add loading animation to forms
            $('form').on('submit', function() {
                const submitBtn = $(this).find('button[type="submit"], input[type="submit"]');
                if (submitBtn.length) {
                    submitBtn.prop('disabled', true);
                    const originalText = submitBtn.html();
                    submitBtn.html('<span class="loading me-2"></span>Processing...');
                }
            });
            
            // Smooth scrolling for internal links
            $('a[href^="#"]').on('click', function(event) {
                var target = $(this.getAttribute('href'));
                if( target.length ) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - 100
                    }, 1000);
                }
            });
            
            // Auto-hide alerts after 5 seconds
            $('.alert').each(function() {
                const alert = $(this);
                setTimeout(function() {
                    alert.fadeOut('slow');
                }, 5000);
            });
            
            // Add animation classes
            $('.card, .btn, .badge').addClass('transition-custom');
            
            // Highlight active navigation item
            const currentPath = window.location.pathname.toLowerCase();
            $('.navbar-nav .nav-link').each(function() {
                const linkPath = $(this).attr('href');
                if (linkPath && currentPath.includes(linkPath.toLowerCase())) {
                    $(this).addClass('active');
                    $(this).closest('.dropdown').find('.nav-link').addClass('active');
                }
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
