@model IEnumerable<DeviceManagementSoftware.Models.Device>
@using DeviceManagementSoftware.Models

@{
    ViewData["Title"] = "Devices by Category";
    var categoryName = ViewBag.CategoryName;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-laptop"></i> Devices in "@categoryName"</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Device
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> No devices found in this category. 
                <a asp-action="Create" class="alert-link">Add your first device</a> to this category.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Code</th>
                            <th>Status</th>
                            <th>Location</th>
                            <th>Date Added</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var device in Model)
                        {
                            <tr>
                                <td><strong>@device.Name</strong></td>
                                <td><code>@device.Code</code></td>
                                <td>
                                    @switch (device.Status)
                                    {
                                        case DeviceStatus.InUse:
                                            <span class="badge bg-success">In Use</span>
                                            break;
                                        case DeviceStatus.Available:
                                            <span class="badge bg-primary">Available</span>
                                            break;
                                        case DeviceStatus.Broken:
                                            <span class="badge bg-danger">Broken</span>
                                            break;
                                        case DeviceStatus.UnderMaintenance:
                                            <span class="badge bg-warning">Under Maintenance</span>
                                            break;
                                    }
                                </td>
                                <td>@device.Location</td>
                                <td>@device.DateOfEntry.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@device.Id" class="btn btn-sm btn-outline-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@device.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@device.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <div class="text-muted text-center mt-3">
                Total: @Model.Count() devices in "@categoryName" category
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-controller="DeviceCategory" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Categories
    </a>
</div>
