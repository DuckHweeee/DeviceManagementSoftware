@model DeviceManagementSoftware.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="card-title mb-0">
                    <i class="bi bi-person-x"></i> Deactivate User
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Warning:</strong> This will deactivate the user account. The user will be marked as inactive but their data and assignment history will be preserved.
                </div>
                
                <h5>Are you sure you want to deactivate this user?</h5>
                
                <dl class="row mt-3">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>
                    
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                    
                    <dt class="col-sm-4">Department:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Department))
                        {
                            <span class="badge bg-info">@Model.Department</span>
                        }
                        else
                        {
                            <span class="text-muted">Not specified</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Position:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Position)</dd>
                    
                    <dt class="col-sm-4">Date Created:</dt>
                    <dd class="col-sm-8">@Model.DateCreated.ToString("MMM dd, yyyy")</dd>
                </dl>
                
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <form asp-action="Delete" method="post" style="display: inline;">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to deactivate this user?')">
                            <i class="bi bi-person-x"></i> Yes, Deactivate User
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
