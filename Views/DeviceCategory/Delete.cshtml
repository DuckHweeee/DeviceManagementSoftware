@model DeviceManagementSoftware.Models.DeviceCategory

@{
    ViewData["Title"] = "Delete Category";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Delete Category
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-warning"></i> <strong>Warning!</strong> Are you sure you want to delete this category?
                </div>
                
                <h5>Category Details:</h5>
                <dl class="row">
                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9"><strong>@Model.Name</strong></dd>
                    
                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@Model.Description</dd>
                    
                    <dt class="col-sm-3">Created:</dt>
                    <dd class="col-sm-9">@Model.DateCreated.ToString("MMM dd, yyyy")</dd>
                </dl>

                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> <strong>Note:</strong> Deleting this category will affect all devices currently assigned to it. Make sure to reassign devices to other categories before deletion.
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this category?');">
                        <i class="bi bi-trash"></i> Yes, Delete Category
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>
